<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글입니다"
        android:id="@+id/textView_cafeBoardInfo_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4기 이재봉"
        android:id="@+id/textView_cafeBoardInfo_name"
        android:layout_below="@+id/textView_cafeBoardInfo_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:id="@+id/textView_cafeInfoBoard_time"
        android:layout_below="@+id/textView_cafeBoardInfo_title"
        android:layout_toRightOf="@+id/textView_cafeBoardInfo_name"
        android:layout_toEndOf="@+id/textView_cafeBoardInfo_name"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회 0"
        android:id="@+id/textView_cafeBoardInfo_viewCount"
        android:layout_alignTop="@+id/textView_cafeInfoBoard_time"
        android:layout_toRightOf="@+id/textView_cafeInfoBoard_time"
        android:layout_toEndOf="@+id/textView_cafeInfoBoard_time"
        android:layout_marginLeft="10dp" />
</RelativeLayout>