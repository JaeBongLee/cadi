<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.WriteContentActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_writeContent_title"
        android:layout_marginTop="10dp"
        android:hint="Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_writeContent_name"
        android:hint="Name"
        android:layout_below="@+id/editText_writeContent_title"
        android:layout_alignParentLeft="true" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_writeContent_time"
        android:hint="Time"
        android:layout_below="@+id/editText_writeContent_name"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_writeContent_viewCount"
        android:hint="ViewCount"
        android:layout_below="@+id/editText_writeContent_time"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:id="@+id/editText_writeContent_content"
        android:hint="Content"
        android:layout_below="@+id/editText_writeContent_viewCount"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button_writeContent_send"
        android:layout_above="@+id/editText_writeContent_viewCount"
        android:layout_alignRight="@+id/editText_writeContent_content"
        android:layout_alignEnd="@+id/editText_writeContent_content" />
</RelativeLayout>
