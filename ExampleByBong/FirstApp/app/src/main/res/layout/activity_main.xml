<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nhnnext.org.gingeraebi.firstapp.MainActivity"
    android:orientation="vertical"
    android:background="#C0FFEE">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative"
        android:id="@+id/button_relatvie"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView1"
        android:id="@+id/button_listView1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTVIEW2"
        android:id="@+id/button_listView2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUTOM"
        android:id="@+id/button_customListView"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
