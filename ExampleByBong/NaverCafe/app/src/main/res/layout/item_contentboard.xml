<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="게시글 제목입니다."
        android:id="@+id/textView_contentBoard_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4기 이재봉"
        android:id="@+id/textView_contentBoard_name"
        android:layout_below="@+id/textView_contentBoard_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:id="@+id/textView_contentBoard_time"
        android:layout_alignTop="@+id/textView_contentBoard_name"
        android:layout_toRightOf="@+id/textView_contentBoard_name"
        android:layout_toEndOf="@+id/textView_contentBoard_name"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회 10"
        android:id="@+id/textView_contentBoard_viewCount"
        android:layout_alignTop="@+id/textView_contentBoard_time"
        android:layout_toRightOf="@+id/textView_contentBoard_time"
        android:layout_toEndOf="@+id/textView_contentBoard_time"
        android:layout_marginLeft="10dp" />
</RelativeLayout>